<Window x:Class="Badminton_Client.AssignTeam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tildel hold" Height="300" Width="300"
        Closing="AssignTeam_OnClosing">
    <Grid>
        <ComboBox x:Name="membersComboBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="membersComboBox_SelectionChanged"/>
        <Button x:Name="backButton" Content="Tilbage" HorizontalAlignment="Left" Margin="210,10,0,0" VerticalAlignment="Top" Width="75" Click="backButton_Click"/>
        <Label x:Name="fullNameLabel" Content="" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="assignTeamComboBox" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="assignToTeam" Content="Sæt på hold" HorizontalAlignment="Left" Margin="135,70,0,0" VerticalAlignment="Top" Width="75" Click="assignToTeam_Click"/>
        <Label x:Name="memberIDLabel" Content="" HorizontalAlignment="Left" Margin="25,37,0,0" VerticalAlignment="Top" Visibility="Hidden"/>
    </Grid>
</Window>
